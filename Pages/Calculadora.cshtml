@page
@model CalculadoraModel
@{
    ViewData["Title"] = "Calculadora de Emissão de Carbono";
}

<div class="menu">
    <h2>Calculadora de Emissão de Carbono</h2>

    <form method="post">
        <div>
            <label>Quilômetros dirigidos por dia:</label>
            <input type="number" asp-for="KmDirigidos" />
        </div>
        <div>
            <label>Consumo de eletricidade (kWh por dia):</label>
            <input type="number" asp-for="KwhConsumidos" />
        </div>
        <div>
            <label>Tipo de dieta:</label>
            <select asp-for="TipoDieta">
                <option value="carne">Carnivora</option>
                <option value="vegetariana">Vegetariana</option>
                <option value="vegana">Vegana</option>
            </select>
        </div>
        <button type="submit" class="btn-custom">Calcular</button>
    </form>
</div>

<div class="menu">
    @if (Model.Resultado != null)
    {
        <h3>Resultado:</h3>
        <p>A emissão estimada de carbono é: @Model.Resultado toneladas de CO₂ por ano.</p>
    }
</div>